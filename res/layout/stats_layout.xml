    <!-- 1/4 of the screen will be transparent with some opacity to show the Main under -->
    <View
        android:layout_weight="1"
        android:layout_width="0"
        android:layout_height="match_parent"
        android:color="33FFFFFF" />  <!-- later make this 100% transparetn and use a timer to change that as it moved in -->
        
    
    <!-- 3/4 of the screen will be for STATISTICS -->
    <LinearLayout
        android:layout_weight="3"
        android:layout_width="0"
        android:layout_height="match_parent"
        android:orintentation="vertical" >
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Test stats" >
 
    </LinearLayout>

</LinearLayout>
