<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/stats_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- 1/4 of the screen will be transparent with some opacity to show the Main under -->
    <View
        android:id="@+id/stats_left"
        android:layout_weight="25"
        android:layout_width="0dp"
        android:layout_height="match_parent" 
    	android:background="#FFCCE5FF" /> 
        
    
    <!-- 3/4 of the screen will be for STATISTICS -->
    <LinearLayout
        android:layout_weight="5"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFFFFFFF"
        android:gravity="center"
        android:weightSum="10" >
	    <View
	        android:id="@+id/stats_divider"
	        android:layout_weight="5"
	        android:layout_width="2dp"
	        android:layout_height="0dp"
	        android:background="#FFA3D0FF" />
	</LinearLayout>
    
    <ScrollView 
        android:layout_weight="70"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="#FFFFFFFF" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="6dp"
        android:orientation="vertical" >
        
        <TextView
            android:id="@+id/stats_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:textStyle="italic"
            android:text="Stats" />
        <TextView
            android:id="@+id/stats_for_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp" />
        
        <TextView
            android:id="@+id/stats_distance_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Distance" />
        <TextView
            android:id="@+id/stats_distance_avg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Distance average" />
        <TextView
            android:id="@+id/stats_distance_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Distance maximum"  />
        <TextView
            android:id="@+id/stats_distance_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Distance total"  />
            
        <TextView
            android:id="@+id/stats_pace_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Pace and Speed" />
        <TextView
            android:id="@+id/stats_pace_speed_avg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Pace and speed average" />
        <TextView
            android:id="@+id/stats_pace_speed_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Pace and speed maximum"  />
            
        <CheckBox 
            android:id="@+id/stats_mi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minEms="7"
            android:text="Miles" />
        <CheckBox 
            android:id="@+id/stats_km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minEms="7"
            android:text="Kilometers" />
        <CheckBox 
            android:id="@+id/stats_mi_and_km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minEms="7"
            android:text="Miles and Km" />
            
    </LinearLayout>
    </ScrollView>

</LinearLayout>
