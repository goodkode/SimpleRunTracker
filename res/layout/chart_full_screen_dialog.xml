<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/settings_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/chart_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="6dp" >
        
        <!-- GRAPH -->
	    <net.takoli.simpleruntracker.GraphViewFull
	        android:id="@+id/chart_full_screen"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent" />
	    
	    <!-- LABELS ON GRAPH -->
	    <TextView 
            android:id="@+id/chart_date_label"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_alignParentTop="true"
	        android:textSize="15sp"
	        android:textColor="#FF000000"
	        android:text="date" />
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
		    android:layout_below="@id/chart_date_label"
	        android:padding="3dp" >
		    <TextView 
	            android:id="@+id/chart_dist_label"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:textSize="15sp"
		        android:textColor="#FFFFA4A4"
		        android:text="dist" />
		    <TextView 
	            android:id="@+id/chart_speed_label"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:textSize="15sp"
		        android:textColor="#FF9FC6FF"
		        android:text="speed" />
	    </LinearLayout>
		<TextView 
            android:id="@+id/chart_avg_label"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerInParent="true"
	        android:textSize="10sp"
	        android:textColor="#77000000"
	        android:text="average distance &amp; speed"
	        android:visibility="invisible" />
	    <TextView
	    	android:id="@+id/chart_run_number"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_alignParentBottom="true"
	        android:textSize="45sp"
	        android:textColor="#77000000"
	        android:text="num"
	        android:visibility="invisible" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center">
	    <SeekBar
	        android:id="@+id/seekBar"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" />
    </RelativeLayout>
    
</LinearLayout>
