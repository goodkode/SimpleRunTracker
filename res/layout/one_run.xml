<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <TextView android:id="@+id/run_date_label"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textSize="12sp"
        android:text="Date" />
    <TextView android:id="@+id/run_date"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textSize="12sp" />
    <TextView android:id="@+id/run_dist_label"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textSize="12sp"
        android:text="Distance" />
    <TextView android:id="@+id/run_dist"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textSize="12sp" />
    <TextView android:id="@+id/run_time_label"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textSize="12sp"
        android:text="Time" />
    <TextView android:id="@+id/run_time"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textSize="12sp" />
    
</LinearLayout>
