<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    
    <include layout="@layout/one_run"
    	android:layout_weight="3"
        android:layout_width="match_parent"
    	android:layout_height="0dp" />
    
    
    <LinearLayout android:layout_weight="2"
        android:layout_width="match_parent"
    	android:layout_height="0dp">
    
	    <TextView android:text="Performance: "
	        android:layout_height="match_parent"
	        android:layout_width="wrap_content"
	        android:textSize="12sp" />
	    <TextView android:id="@+id/perf_avg"
	        android:layout_height="match_parent"
	        android:layout_width="wrap_content"
	        android:textSize="12sp" />
	    <TextView android:text=" of average for similar distance"
	        android:layout_height="match_parent"
	        android:layout_width="wrap_content"
	        android:textSize="12sp" />
    
    </LinearLayout>
    
    <LinearLayout android:layout_weight="2"
        android:layout_width="match_parent"
    	android:layout_height="0dp">
    
	    <TextView android:id="@+id/perf_dist"
	        android:layout_height="match_parent"
	        android:layout_width="wrap_content"
	        android:textSize="12sp" />
	    <TextView android:text=" of best distance"
	        android:layout_height="match_parent"
	        android:layout_width="wrap_content"
	        android:textSize="12sp" />
	    <TextView android:id="@+id/perf_pace"
	        android:layout_height="match_parent"
	        android:layout_width="wrap_content"
	        android:textSize="12sp" />
	    <TextView android:text=" of best pace"
	        android:layout_height="match_parent"
	        android:layout_width="wrap_content"
	        android:textSize="12sp" />
    
    </LinearLayout>
    
</LinearLayout>
