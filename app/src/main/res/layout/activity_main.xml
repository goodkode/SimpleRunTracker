<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/main"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".MainActivity" >


	<include layout="@layout/toolbar" />


	<android.support.percent.PercentRelativeLayout
        android:id="@+id/main_layout"
		android:layout_below="@+id/toolbar"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<android.support.v7.widget.RecyclerView
			android:id="@+id/my_runs"
            app:layout_marginTopPercent="18%"
			app:layout_heightPercent="62%"
			app:layout_widthPercent="100%"
            android:background="#F8F8F8"
			android:paddingLeft="6dp"
			android:paddingRight="6dp"
			android:stackFromBottom="true" />

		<net.takoli.simpleruntracker.graph.GraphViewSmall
			android:id="@+id/graph"
            app:layout_heightPercent="20%"
            app:layout_widthPercent="100%"
            android:background="#FFFFFF"
            android:layout_alignParentBottom="true"
			android:paddingLeft="24dp"
			android:paddingRight="24dp"
			android:paddingBottom="15dp"
			android:paddingTop="10dp"  />


		<!--Enter Run Fragment-->
        <FrameLayout
            android:id="@+id/enter_run_frame"
            app:layout_heightPercent="58%"
            app:layout_widthPercent="100%"
			android:background="#FFFFFF" >

            <fragment
                android:name="net.takoli.simpleruntracker.EnterRun"
                android:tag="@string/enter_run_tag"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
				tools:layout="@layout/enter_run" />

        </FrameLayout>

	</android.support.percent.PercentRelativeLayout>

</RelativeLayout>
